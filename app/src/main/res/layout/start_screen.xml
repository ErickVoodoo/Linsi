<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/startScreenStatus"
        android:gravity="center"
        android:textSize="@dimen/textLarge"
        android:text="@string/startScreenLoadInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <ProgressBar
        android:id="@+id/progressBarStartScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <Button
        android:visibility="gone"
        android:id="@+id/startScreenRetryDownload"
        android:layout_gravity="center"
        android:background="@drawable/blue_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/startScreenRetryLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/buttonColorText" />
</LinearLayout>